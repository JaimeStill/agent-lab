{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@core/*": [
        "./client/core/*"
      ],
      "@design/*": [
        "./client/design/*"
      ],
      "@components/*": [
        "./client/components/*"
      ]
    }
  },
  "include": [
    "client/**/*",
    "scalar/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
